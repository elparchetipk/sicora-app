{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sicora-app.sena.edu.co/schemas/schedule.json",
  "title": "Horario",
  "description": "Esquema para validación de datos de horario en carga masiva",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Identificador único del horario (UUID v4)"
    },
    "instructor_id": {
      "type": "string",
      "format": "uuid",
      "description": "ID del instructor asignado al horario"
    },
    "curso": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100,
      "description": "Nombre del curso o materia"
    },
    "fecha_inicio": {
      "type": "string",
      "format": "date",
      "description": "Fecha de inicio del curso en formato YYYY-MM-DD"
    },
    "fecha_fin": {
      "type": "string",
      "format": "date",
      "description": "Fecha de fin del curso en formato YYYY-MM-DD"
    },
    "hora_inicio": {
      "type": "string",
      "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9]$",
      "description": "Hora de inicio en formato HH:MM:SS"
    },
    "hora_fin": {
      "type": "string",
      "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9]$",
      "description": "Hora de fin en formato HH:MM:SS"
    },
    "salon": {
      "type": "string",
      "minLength": 2,
      "maxLength": 20,
      "pattern": "^[A-Za-z0-9\\-]+$",
      "description": "Identificador del salón o aula"
    },
    "descripcion": {
      "type": "string",
      "maxLength": 500,
      "description": "Descripción detallada del curso"
    },
    "max_estudiantes": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "description": "Número máximo de estudiantes permitidos"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Fecha y hora de creación en formato ISO 8601"
    }
  },
  "required": [
    "id",
    "instructor_id",
    "curso",
    "fecha_inicio",
    "fecha_fin",
    "hora_inicio",
    "hora_fin",
    "salon",
    "max_estudiantes",
    "created_at"
  ],
  "additionalProperties": false,
  "examples": [
    {
      "id": "d8e9f0a1-2b3c-4d5e-6f7a-8b9c0d1e2f3a",
      "instructor_id": "a7d8e9f0-1a2b-3c4d-5e6f-7a8b9c0d1e2f",
      "curso": "Programación Web",
      "fecha_inicio": "2025-07-01",
      "fecha_fin": "2025-12-15",
      "hora_inicio": "08:00:00",
      "hora_fin": "12:00:00",
      "salon": "Lab-101",
      "descripcion": "Desarrollo Frontend y Backend",
      "max_estudiantes": 25,
      "created_at": "2025-06-15T18:30:00Z"
    }
  ]
}
