# SICORA Backend Python - Configuración de Staging
# Este archivo contiene la configuración para el entorno de staging

# Environment
ENVIRONMENT=staging
DEBUG=false

# Database Configuration
DB_HOST=db-staging.sicora.internal
DB_PORT=5432
DB_USERNAME=sicora_staging
DB_PASSWORD=${DB_PASSWORD_STAGING}
DB_DATABASE=sicora_staging
DB_ECHO=false
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=7200

# Redis Configuration
REDIS_HOST=redis-staging.sicora.internal
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD_STAGING}
REDIS_DATABASE=0

# Security Configuration
SECURITY_SECRET_KEY=${SECRET_KEY_STAGING}
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_CORS_ORIGINS=["https://staging.sicora.com", "https://app-staging.sicora.com"]

# API Configuration
API_TITLE=SICORA Backend API (Staging)
API_VERSION=1.0.0-staging
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2
API_RATE_LIMIT_REQUESTS=500

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/sicora/staging.log
LOG_STRUCTURED_LOGGING=true
LOG_INCLUDE_TRACE_ID=true

# Monitoring Configuration
MONITORING_METRICS_ENABLED=true
MONITORING_HEALTH_CHECK_ENABLED=true
MONITORING_TRACING_ENABLED=true
MONITORING_TRACING_SAMPLE_RATE=0.1
MONITORING_PROFILING_ENABLED=false

# External Services Configuration
EXTERNAL_EMAIL_ENABLED=true
EXTERNAL_EMAIL_SMTP_HOST=smtp.staging.sicora.com
EXTERNAL_EMAIL_SMTP_PORT=587
EXTERNAL_EMAIL_USERNAME=${EMAIL_USERNAME_STAGING}
EXTERNAL_EMAIL_PASSWORD=${EMAIL_PASSWORD_STAGING}
EXTERNAL_OPENAI_API_KEY=${OPENAI_API_KEY_STAGING}
