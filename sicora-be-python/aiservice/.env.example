# Database Configuration
DATABASE_URL=postgresql+asyncpg://sicora_user:sicora_password@localhost:5432/sicora_db
DATABASE_ECHO=false

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-123456789
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Configuration
PASSWORD_MIN_LENGTH=8
PASSWORD_HASH_ROUNDS=12

# Email Configuration (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@sicora.sena.edu.co
SMTP_FROM_NAME=SICORA - AsisTE App

# Application Configuration
APP_NAME=SICORA UserService
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORGANIZATION=your-org-id-optional
ANTHROPIC_API_KEY=your-anthropic-api-key-optional

# Vector Store Configuration
VECTOR_STORE_TYPE=chromadb
CHROMADB_PATH=./chromadb
EMBEDDING_MODEL=text-embedding-ada-002

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379/1
REDIS_PASSWORD=optional-redis-password
CACHE_TTL_SECONDS=3600

# KbService Integration
KB_SERVICE_URL=http://kbservice:8000/api/v1
KB_SERVICE_TIMEOUT=30
KB_INTEGRATION_ENABLED=true

# Enhanced Chat Configuration
DEFAULT_CHAT_MODEL=gpt-4
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=1000
KNOWLEDGE_SEARCH_LIMIT=5
