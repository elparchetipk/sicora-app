# SICORA Backend Python - Configuración de Producción
# Este archivo contiene la configuración para el entorno de producción
# NOTA: Las variables sensibles deben configurarse como variables de entorno del sistema

# Environment
ENVIRONMENT=production
DEBUG=false

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=sicora_prod
DB_PASSWORD=PRODUCTION_DB_PASSWORD_MUST_BE_CHANGED_IN_DEPLOYMENT
DB_DATABASE=sicora_production
DB_ECHO=false
DB_POOL_SIZE=50
DB_MAX_OVERFLOW=100
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=PRODUCTION_REDIS_PASSWORD_MUST_BE_CHANGED_IN_DEPLOYMENT
REDIS_DATABASE=0
REDIS_SOCKET_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true

# Security Configuration (CRÍTICO: configurar en variables de entorno)
SECURITY_SECRET_KEY=PRODUCTION_SECRET_KEY_MUST_BE_CHANGED_IN_DEPLOYMENT
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=15
SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=7
SECURITY_CORS_ORIGINS=["https://sicora.com", "https://app.sicora.com", "https://admin.sicora.com"]

# API Configuration
API_TITLE=SICORA Backend API
API_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_MAX_REQUEST_SIZE=16777216
API_REQUEST_TIMEOUT=30
API_RATE_LIMIT_REQUESTS=200

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/sicora/production.log
LOG_FILE_MAX_SIZE=104857600
LOG_FILE_BACKUP_COUNT=10
LOG_STRUCTURED_LOGGING=true
LOG_INCLUDE_TRACE_ID=true

# Monitoring Configuration
MONITORING_METRICS_ENABLED=true
MONITORING_HEALTH_CHECK_ENABLED=true
MONITORING_TRACING_ENABLED=true
MONITORING_TRACING_SAMPLE_RATE=0.01
MONITORING_PROFILING_ENABLED=false

# External Services Configuration
EXTERNAL_EMAIL_ENABLED=true
EXTERNAL_EMAIL_SMTP_HOST=CHANGEME_EMAIL_HOST
EXTERNAL_EMAIL_SMTP_PORT=587
EXTERNAL_EMAIL_USERNAME=CHANGEME_EMAIL_USER
EXTERNAL_EMAIL_PASSWORD=CHANGEME_EMAIL_PASSWORD
EXTERNAL_EMAIL_USE_TLS=true
EXTERNAL_OPENAI_API_KEY=CHANGEME_OPENAI_KEY

# Notification Service Configuration
NOTIFICATION_SERVICE_HOST=localhost
NOTIFICATION_SERVICE_PORT=8002
NOTIFICATION_SERVICE_TIMEOUT=10

# Task Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
