# Environment Configuration for SICORA Python Stack (FastAPI)

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=sicora_dev
DATABASE_USER=sicora_user
DATABASE_PASSWORD=sicora_password
DATABASE_URL=postgresql+asyncpg://sicora_user:sicora_password@localhost:5432/sicora_dev

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# FastAPI Configuration
FASTAPI_ENV=development
DEBUG=true
API_V1_STR=/api/v1

# Service Ports
APIGATEWAY_PORT=8000
USERSERVICE_PORT=8001
SCHEDULESERVICE_PORT=8002
ATTENDANCESERVICE_PORT=8003
EVALINSERVICE_PORT=8004
EVALPROYSERVICE_PORT=8005
KBSERVICE_PORT=8006
AISERVICE_PORT=8007

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:8000"]

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# File Upload
MAX_UPLOAD_SIZE=10MB
UPLOAD_PATH=./uploads

# Email Configuration (if needed)
# SMTP_TLS=true
# SMTP_PORT=587
# SMTP_HOST=
# SMTP_USER=
# SMTP_PASSWORD=
# EMAILS_FROM_EMAIL=

# OpenAI Configuration (for AI services)
# OPENAI_API_KEY=your-openai-api-key
# OPENAI_MODEL=gpt-4

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PATH=/metrics
HEALTH_CHECK_PATH=/health

# Testing
TEST_DATABASE_URL=sqlite+aiosqlite:///./test.db

# ChromaDB Configuration (for knowledge base)
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=sicora_knowledge

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
