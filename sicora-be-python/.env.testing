# SICORA Backend Python - Configuración de Testing
# Este archivo contiene la configuración para el entorno de testing

# Environment
ENVIRONMENT=testing
DEBUG=false

# Database Configuration (usando BD de test)
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=sicora_user
DB_PASSWORD=sicora_password
DB_DATABASE=sicora_test
DB_ECHO=false
DB_POOL_SIZE=3
DB_MAX_OVERFLOW=5

# Redis Configuration (BD separada para tests)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DATABASE=1

# Security Configuration
SECURITY_SECRET_KEY=test-secret-key-not-for-production
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=5
SECURITY_CORS_ORIGINS=["http://testserver"]

# API Configuration
API_TITLE=SICORA Backend API (Testing)
API_VERSION=1.0.0-test
API_HOST=127.0.0.1
API_PORT=8001
API_RATE_LIMIT_ENABLED=false

# Logging Configuration
LOG_LEVEL=WARNING
LOG_TO_FILE=false
LOG_STRUCTURED_LOGGING=false

# Monitoring Configuration
MONITORING_METRICS_ENABLED=false
MONITORING_HEALTH_CHECK_ENABLED=true
MONITORING_TRACING_ENABLED=false
MONITORING_PROFILING_ENABLED=false

# External Services Configuration (deshabilitados en testing)
EXTERNAL_EMAIL_ENABLED=false
EXTERNAL_OPENAI_API_KEY=test-key
