# SICORA Backend Python - Configuración de Desarrollo
# Este archivo contiene la configuración para el entorno de desarrollo

# Environment
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://sicora_user:sicora_password@localhost:5433/sicora_dev
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=sicora_user
DB_PASSWORD=sicora_password
DB_DATABASE=sicora_dev
DB_ECHO=true
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DATABASE=0

# Security Configuration
SECURITY_SECRET_KEY=dev-secret-key-for-development-only
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=60
SECURITY_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:8080"]

# API Configuration
API_TITLE=SICORA Backend API (Development)
API_VERSION=1.0.0-dev
API_HOST=0.0.0.0
API_PORT=8000
API_RATE_LIMIT_REQUESTS=1000

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_TO_FILE=true
LOG_FILE_PATH=logs/development.log
LOG_STRUCTURED_LOGGING=true

# Monitoring Configuration
MONITORING_METRICS_ENABLED=true
MONITORING_HEALTH_CHECK_ENABLED=true
MONITORING_TRACING_ENABLED=false
MONITORING_PROFILING_ENABLED=true

# External Services Configuration
EXTERNAL_EMAIL_ENABLED=false
EXTERNAL_OPENAI_MODEL=gpt-3.5-turbo
