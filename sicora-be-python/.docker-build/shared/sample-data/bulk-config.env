# Configuración de Carga Masiva - SICORA-APP Backend Multistack

# =============================================================================
# BULK DATA OPERATIONS CONFIGURATION
# =============================================================================
# Este archivo define la configuración común para operaciones de carga masiva
# que debe ser respetada por todos los 6 stacks tecnológicos
# =============================================================================

# GENERAL SETTINGS
BULK_OPERATIONS_ENABLED=true
MAX_FILE_SIZE_MB=100
MAX_RECORDS_PER_BATCH=1000
TIMEOUT_SECONDS=300
CHUNK_SIZE=100

# FILE FORMATS
SUPPORTED_FORMATS=csv,json,xlsx
DEFAULT_ENCODING=utf-8
CSV_DELIMITER=,
CSV_QUOTE_CHAR="
JSON_INDENT=2

# VALIDATION SETTINGS
STRICT_VALIDATION=true
ALLOW_PARTIAL_FAILURES=false
MAX_ERROR_TOLERANCE_PERCENT=5
VALIDATE_BEFORE_IMPORT=true
GENERATE_VALIDATION_REPORT=true

# PERFORMANCE SETTINGS
PARALLEL_PROCESSING=true
MAX_WORKER_THREADS=4
MEMORY_LIMIT_MB=512
ENABLE_PROGRESS_TRACKING=true
ENABLE_CACHING=true

# DATABASE SETTINGS
USE_TRANSACTIONS=true
BATCH_INSERT_SIZE=500
CONNECTION_POOL_SIZE=10
QUERY_TIMEOUT_SECONDS=60
ENABLE_FOREIGN_KEY_CHECKS=true

# SECURITY SETTINGS
REQUIRE_ADMIN_ROLE=true
LOG_ALL_OPERATIONS=true
ENABLE_AUDIT_TRAIL=true
SANITIZE_INPUT_DATA=true
PREVENT_SCRIPT_INJECTION=true

# ERROR HANDLING
CONTINUE_ON_ERROR=false
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5
GENERATE_ERROR_REPORTS=true
EMAIL_ERROR_NOTIFICATIONS=false

# EXPORT SETTINGS
DEFAULT_EXPORT_FORMAT=csv
INCLUDE_METADATA=true
COMPRESS_LARGE_EXPORTS=true
MAX_EXPORT_RECORDS=100000
EXPORT_TIMEOUT_MINUTES=30

# SHARED DATA PATHS
SHARED_DATA_ROOT=shared-data
IMPORTS_DIR=imports
TEMPLATES_DIR=templates
EXPORTS_DIR=exports
SAMPLES_DIR=samples
SCHEMAS_DIR=schemas

# STACK SPECIFIC SETTINGS
[fastapi]
ASYNC_PROCESSING=true
USE_CELERY=true
PANDAS_ENGINE=c
VALIDATOR=pydantic

[go]
GOROUTINES_ENABLED=true
CSV_PARSER=encoding/csv
JSON_PARSER=encoding/json
VALIDATOR=go-playground/validator

[express]
STREAM_PROCESSING=true
CSV_LIBRARY=csv-parser
JSON_LIBRARY=native
VALIDATOR=joi

[nextjs]
SERVER_SIDE_PROCESSING=true
FILE_UPLOAD_API=true
CSV_LIBRARY=papaparse
VALIDATOR=zod

[java]
SPRING_BATCH_ENABLED=true
CSV_LIBRARY=opencsv
JSON_LIBRARY=jackson
VALIDATOR=hibernate-validator

[kotlin]
COROUTINES_ENABLED=true
CSV_LIBRARY=kotlin-csv
JSON_LIBRARY=kotlinx-serialization
VALIDATOR=konform

# ENTITY SPECIFIC SETTINGS
[users]
MAX_RECORDS=100000
REQUIRED_FIELDS=id,nombre,apellido,email,documento,rol,programa
CONDITIONAL_REQUIRED_FIELDS=ficha_id(for_rol=aprendiz)
UNIQUE_FIELDS=email,documento
UNIQUE_COMBINATIONS=ficha_id+documento(for_rol=aprendiz)
BUSINESS_RULES=one_ficha_per_aprendiz,ficha_7_digits
VALIDATION_SCHEMA=user.json

[schedules]
MAX_RECORDS=50000
REQUIRED_FIELDS=id,instructor_id,curso,fecha_inicio,fecha_fin
UNIQUE_FIELDS=id
VALIDATION_SCHEMA=schedule.json

[attendance]
MAX_RECORDS=1000000
REQUIRED_FIELDS=id,schedule_id,student_id,timestamp,status
UNIQUE_FIELDS=id
VALIDATION_SCHEMA=attendance.json

[evaluations]
MAX_RECORDS=500000
REQUIRED_FIELDS=id,instructor_id,titulo,criterios
UNIQUE_FIELDS=id
VALIDATION_SCHEMA=evaluation.json

[knowledge-base]
MAX_RECORDS=100000
REQUIRED_FIELDS=id,titulo,contenido,categoria
UNIQUE_FIELDS=id
VALIDATION_SCHEMA=document.json

[ai-training]
MAX_RECORDS=1000000
REQUIRED_FIELDS=id,input,expected_output,categoria
UNIQUE_FIELDS=id
VALIDATION_SCHEMA=training-data.json

# MONITORING AND METRICS
ENABLE_METRICS=true
METRICS_COLLECTION_INTERVAL=60
PROMETHEUS_EXPORT=false
CUSTOM_METRICS=import_speed,error_rate,success_rate

# DEVELOPMENT SETTINGS
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false
DEVELOPMENT_SAMPLES=true

# TESTING SETTINGS
ENABLE_TEST_MODE=false
USE_TEST_DATABASE=false
MOCK_EXTERNAL_SERVICES=false
GENERATE_TEST_DATA=true

# BACKUP AND RECOVERY
AUTO_BACKUP_BEFORE_IMPORT=true
BACKUP_RETENTION_DAYS=30
ENABLE_POINT_IN_TIME_RECOVERY=true
COMPRESS_BACKUPS=true
