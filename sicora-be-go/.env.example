# Environment Configuration for SICORA Go Stack

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=sicora_dev
DATABASE_USER=sicora_app_rw
DATABASE_PASSWORD=cambia_esto_rw
DATABASE_URL=postgres://sicora_app_rw:cambia_esto_rw@localhost:5432/sicora_dev?sslmode=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=168h

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=120s

# Service Ports
USERSERVICE_PORT=8001
SCHEDULESERVICE_PORT=8002
ATTENDANCESERVICE_PORT=8003
EVALINSERVICE_PORT=8004
PROJECTEVALSERVICE_PORT=8007

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Application Environment
ENVIRONMENT=development
DEBUG=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization,Cache-Control

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# File Upload
MAX_UPLOAD_SIZE=10MB
UPLOAD_PATH=./uploads

# External Services (if needed)
# NOTIFICATION_SERVICE_URL=http://localhost:8010
# EMAIL_SERVICE_URL=http://localhost:8011

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PATH=/metrics
HEALTH_CHECK_PATH=/health

# Security
BCRYPT_COST=12
SESSION_SECRET=your-session-secret-key
CSRF_KEY=your-csrf-secret-key

# Swagger Documentation
SWAGGER_ENABLED=true
SWAGGER_HOST=localhost
SWAGGER_BASE_PATH=/api/v1
